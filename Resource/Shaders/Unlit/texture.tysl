    str Name = Unlit/Texture;
}
#TINY_HEAD_END

#TINY_PASS_BEGIN
{
    #TINY_CFG_BEGIN
    {
        int Version = 330;
        int OrderID = 0;
        str Queue = Opaque;
        str DepthTest = Less;
        bool ZWrite = true;
        str DepthTest = Less;
        str CullFace = Off;
    }
    #TINY_CFG_END

    #TINY_VS_BEGIN
    {
        #include "../Include/tiny_vs.tyin"

        TINY_LAYOUT_POSITION;
        TINY_LAYOUT_UV;

        out float2 myUV;

        void main()
        {
            gl_Position = TINY_MatrixP * TINY_MatrixV * TINY_MatrixM * float4(tiny_layout_Position, 1.0);
            myUV = tiny_layout_UV;
        }
    }
    #TINY_VS_END

    #TINY_FS_BEGIN
    {
        #include "../Include/tiny_fs.tyin"

        in float2 myUV;
        out float4 myFinalColor;
        [Editor(ColorTexture)]
        uniform tex2D myTexColor2D;

        void main()
        {
            myFinalColor = texture(myTexColor2D, myUV);
            //myFinalColor = float4(0.0, 1.0, 0.0, 1.0);
        }
    }
    #TINY_FS_END
}
#TINY_PASS_END