struct LightDirection
{
    float3 direction;
    float3 ambient;
    float3 diffuse;
    float3 specular;
};

struct LightPoint
{
    float3 position;

    float3 ambient;
    float3 diffuse;
    float3 specular;

    float3 config;
};

uniform LightDirection TINY_LitDir;
uniform LightPoint TINY_LitPoint;